{
    "manifest_version": 3,
    "name": "Focus Flow",
    "version": "1.0",
    "description": "Hides YouTube videos and Instagram reels recommendations .",
    "permissions": ["activeTab", "declarativeContent", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*", "*://www.instagram.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  